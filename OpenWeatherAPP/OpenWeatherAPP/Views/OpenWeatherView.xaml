<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenWeatherAPP.Views.OpenWeatherView"
             Title="OpenWeatherView">
    <VerticalStackLayout Padding="20" Spacing="10">
        
        
        <Label Text="Temperatura:" FontSize="18" />
        <Label Text="Nome da Cidade" FontSize="25" FontAttributes="Bold"/>
        <HorizontalStackLayout>
            <Label Text="{Binding Temperatura}" FontSize="35" FontAttributes="Bold" />
            <Label Text=" °C" FontSize="35" FontAttributes="Bold"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="H:33°"/>
            <Label Text="L:21°"/>
        </HorizontalStackLayout>

        <Frame
            Margin="0,10,0,15"
            Padding="0"
            BackgroundColor="#FFFCE2"
            Opacity="0.5"
            BorderColor="Transparent"
            CornerRadius="0"
            HasShadow="False"
            HeightRequest="{OnIdiom Desktop=81,
                                    Tablet=50,
                                    Phone=30}"
            WidthRequest="600">
            <Label Text="{Binding Descricao}" FontSize="22" FontAttributes="Bold" />
        </Frame>
        
        <Entry Placeholder="Digite uma cidade" Text="{Binding Cidade}" />
        <Button Text="Buscar Clima" Command="{Binding GetWeatherCommand}" />
        
    </VerticalStackLayout>
</ContentPage>